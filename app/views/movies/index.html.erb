<h1><%= pluralize(@movies.size, 'Movie') %></h1>


  <% @movies.each do |movie|  %>
  <article> 

	   <header>
		   <h2><%= movie.title %> </h2>
	   </header>
	   
	   	<p>
			<%= truncate( movie.description,length: 40 , separator: ' ') %>
		</p>
		<table>
	 	<tr>
			<th>Release Date:</th>
				<td><%= movie.released_on %> (<%= time_ago_in_words(movie.released_on) %> ago)</td>
			<th>Rating:</th>
				<td><%= movie.rating %></td>
			<th>Total Gross Box Office:</th>
				<td><%= format_total_gross(movie) %></td>	
	</tr>
  </table>
</article>

  <% end %>




